[Unit]
Description=Zenoh webcam JPEG publisher (cerebellum)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
Restart=always
Environment=CAM_KEY=rt/vision/cam0
Environment=CAM_DEVICE=0
Environment=CAM_WIDTH=640
Environment=CAM_HEIGHT=480
Environment=CAM_FPS=15
Environment=CAM_QUALITY=80
ExecStart=/opt/psyched/venv/bin/python /opt/psyched/layer3/services/zenoh_camera_pub.py

[Install]
WantedBy=multi-user.target

