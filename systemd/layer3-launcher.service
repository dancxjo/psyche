[Unit]
Description=Layer3 ROS2 launcher from device TOML
After=layer2-ros.env layer1-zenoh.service
Wants=layer1-bridge.service

[Service]
Type=simple
EnvironmentFile=/opt/psyched/layer2/rmw.env
ExecStart=/usr/bin/python3 /opt/psyched/layer3/launcher/launch_from_toml.py --device /opt/psyched/devices/$(hostname -s).toml
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
